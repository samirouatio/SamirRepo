<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RedActivity"
    android:background="@color/black">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp"
        >

        <LinearLayout
            android:id="@+id/imgHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_dotted"
            android:padding="@dimen/_3sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/theRedImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@id/imgHolder"
            android:layout_centerHorizontal="true"
            android:id="@+id/theRedButton"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginVertical="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/card_main2"
            android:fontFamily="@font/roboto_reg"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Download"
            android:textColor="@color/white"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:textAllCaps="false"

            />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.25"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/dhr_stars" />

</RelativeLayout>