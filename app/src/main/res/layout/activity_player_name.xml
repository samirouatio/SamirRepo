<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PlayerName"
    android:background="@drawable/bg_all_activities"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:letterSpacing="0.02"
            android:text="Enter your player name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold|italic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_30sdp"
            >

            <EditText
                android:id="@+id/editTextPlayerName"
                android:inputType="textPersonName"
                android:background="@drawable/card_main_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#B8ADAD"
                android:textColorHint="#B8ADAD"
                android:gravity="center"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:hint="Type your name.."
                android:layout_marginVertical="@dimen/_18sdp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:background="@drawable/card_main2"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Next"
                android:layout_marginVertical="@dimen/_7sdp"
                android:letterSpacing="0.025"

                />

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/generalBanner"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@color/white"

            />

        <com.yandex.mobile.ads.banner.BannerAdView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yndxBanner"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"

            />
    </LinearLayout>




</RelativeLayout>

