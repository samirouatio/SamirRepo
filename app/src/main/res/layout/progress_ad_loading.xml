<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_transparent"
    android:gravity="center"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_x"
        android:gravity="center"
        android:minWidth="@dimen/_200sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15ssp">

        <TextView
            android:id="@+id/adLoadingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_reg"
            android:gravity="center_horizontal|bottom"
            android:text="Please Wait... Ad loading!"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progess_gradient_splash"
            android:progress="80"
            android:progressDrawable="@drawable/progess_gradient_splash" />

    </LinearLayout>

</LinearLayout>